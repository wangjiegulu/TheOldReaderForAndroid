<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >


    <com.astuetz.PagerSlidingTabStrip
            xmlns:psts="http://schemas.android.com/apk/res/com.wangjie.theoldreaderforandroid"
            android:id="@+id/main_tab_strips"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            psts:pstsShouldExpand="true"
            psts:pstsIndicatorHeight="2dp"
            psts:pstsUnderlineHeight="2dp"
            psts:pstsIndicatorColor="#f8995f"
            />

    <android.support.v4.view.ViewPager
            android:id="@+id/main_tab_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>

